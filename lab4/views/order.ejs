<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/flower-icon.png"/>
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <script src="./scripts/main.js"></script>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
</head>

<body class="content">

<%- include(`partials/header`); %>

<main class="main">

    <% for (let category of categories) { %>
        <section class="section secondary-color-bg">
            <div class="centered-container">
                <h1 class="decorated-title font-secondary main-color">
                    <span class="main-color-emphasized"><%= category.name %></span>
                    Inventory</h1>
                <div class="separator"></div>
            </div>
            <% if (categoryItemMap[category.id].length === 0) { %>
                <div class="centered-container">
                    <h2 class="decorated-title font-secondary main-color">No items in this category</h2>
                </div>
            <% } else { %>
                <div class="gallery">
                    <% for (let item of categoryItemMap[category.id]) { %>
                        <div class="photo-box gutter" data-id="<%= item.categoryid %>">
                            <img class="photo-box-image" src="<%= item.imageurl %>"></img>
                            <div class="photo-box-title font-secondary main-color-emphasized"><%= item.name %></div>
                            <div class="buttons"><button class="btn" onClick=" addItemToCart(<%= item.id %>)">Add to Cart</button></div>
                        </div>
                        
                    <% } %>
                </div>
            <% } %>
        </section>
    <% } %>

</main>

<%- include(`partials/footer`); %>

</body>

</html>